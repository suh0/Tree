<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="200dp"
    android:layout_width="300dp"
    android:background="@drawable/area_dialog">

    <TextView
        android:id="@+id/txt_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend_deca"
        android:text="Would you like to \n   buy the item?"
        android:textFontWeight="5000"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.297" />

    <Button
        android:id="@+id/btn_yes"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/btn_yes"
        android:fontFamily="@font/lexend_deca"
        android:text="yes"
        android:textColor="#E8FFF1"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_dialog"
        app:layout_constraintVertical_bias="0.361" />

    <Button
        android:id="@+id/btn_no"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_yes"
        android:fontFamily="@font/lexend_deca"
        android:text="no"
        android:textColor="#E8FFF1"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_yes"
        app:layout_constraintHorizontal_bias="0.821"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_dialog"
        app:layout_constraintVertical_bias="0.361" />


</androidx.constraintlayout.widget.ConstraintLayout>
