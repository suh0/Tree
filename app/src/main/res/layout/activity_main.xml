            android:text="구매"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.17"
            app:layout_constraintStart_toEndOf="@id/text_view3"
            app:layout_constraintStart_toStartOf="parent"
