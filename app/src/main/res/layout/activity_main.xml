            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/game_image" />

        <Button
            android:id="@+id/button1"
            android:layout_width="84dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:text="구매"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.87"
            app:layout_constraintStart_toEndOf="@id/text_view1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view1" />

        <ImageView
            android:id="@+id/game_image2"
            android:layout_width="135dp"
            android:layout_height="277dp"
            android:src="@drawable/tree_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.518"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="27dp" />

        <ImageView
            android:id="@+id/game_image3"
            android:layout_width="148dp"
            android:layout_height="259dp"
            android:layout_marginTop="424dp"
            android:src="@drawable/tree_4"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="244dp" />

        <TextView
            android:id="@+id/text_view2"
